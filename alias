# remote sessions
alias therapy='ssh root@therapy'
alias app1='ssh root@app1'
alias app2='ssh root@app2 -p10022'
alias app5='ssh root@app5 -p10022'
alias app3='ssh root@app3'
alias app4='ssh root@app4'
alias aix='ssh root@thames'
alias thames='ssh root@thames'
alias morphine='ssh root@morphine'
alias inflames='ssh root@inflames'
alias hpux='ssh root@hp01'
alias hp01='ssh root@hp01'
alias stback='ssh root@10.232.17.6'
alias stedge='ssh root@10.232.17.7'

# colorize
alias dmesg='dmesg --color'
alias grep='grep -n --color=auto'
alias egrep='egrep -n --color=auto'
alias ls='ls --color -F'
alias pls='sudo $(fc -ln -1)'

# commands
alias vless='/usr/share/vim/vim74/macros/less.sh'
alias vimrc='vim ~/.vimrc'
alias ..='cd ..'
alias psgrep='ps -ef | grep -v grep | grep'
alias jgrep='grep -R --include=*.java'
alias cdsc='cd ~/Axway/SecureClient'
alias cdax='cd ~/Axway/'
alias kill9='kill -9'
alias http='python2.7 -m SimpleHTTPServer 8080'
alias ns='netstat -ntp'
alias c='clear'
alias ll='ls -laF --group-directories-first'
alias l='ls -F'
alias wget='wget --no-check-certificate'
alias esxi='ssh root@esxi'
# http://zwischenzugs.tk/index.php/2015/07/01/bash-shortcuts-gem/
alias binds="echo ' * Binds:'; bind -l | sed 's/.*/bind -q \0/' | bash 2>&1 | command grep 'can be' ; echo ' * STTYs:'; stty -a"
alias portdump='tcpdump -an -A -s 0 port'
alias mountcd='sudo mount -t iso9660 -o ro' # /dev/sr0 ./cdrom

# git
alias gstat='git status'
alias cdgit='cd ~makpoc/git'
alias gsvndiff="git diff git-svn HEAD"
alias gl="git log --graph --abbrev-commit --decorate --date=relative --format=:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
alias gpull="git stash save 'gpull' && git pull --rebase && git stash pop"

# rdesktop:
resolution='1920x1050'
alias r="rdesktop -g $resolution -u vmuser -r disk:remotedisk=/home/makpoc/SharedFolder/"
alias r154="rdesktop -g $resolution -u vmuser -p Secret123 10.232.17.154 -r disk:remotedisk=/home/makpoc/SharedFolder/"

# pacman
alias pacup="sudo pacman -Syu"
alias pacss="pacman -Ss"
alias pacin="sudo pacman -S"

# yaourt
alias yup="yaourt -Syua"

# ranger
alias ranger='TERM=xterm-256color ranger'
alias rskype='ranger ~/Downloads/Skype/'

# Misc
alias lynx='lynx --accept_all_cookies'
alias cal='cal -y -m --color=always'
